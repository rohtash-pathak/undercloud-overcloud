- name: installing httpd
  hosts: all
  remote_user: stack
  tasks:


  - name: Installing Httpd removed
    yum: name=httpd state=removed
    register: output

  - name: Saving the logs
    local_action: copy content= "{{ output.stdout }}"  dest="/root/lsof.log" 
    run_once: true
